// My VisualStudio Code settings.json
// Theme: One Dark Pro Darker
// Icon Theme: Material Theme Icons
// Product Icon Theme: Material Product Icons
{
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.renderWhitespace": "boundary",
    "vsicons.dontShowNewVersionMessage": true,
    "epitech-c-cpp-headers.username": "aymeric.chaverot",
    "epitech-c-cpp-headers.login": "aymeric.chaverot@epitech.eu",
    "epitech-c-cpp-headers.headerType": "post2017",
    "epitech-c-cpp-headers.usePragmaOnce": false,
    "epitech-c-cpp-headers.autoGenerateClasses": false,
    "workbench.colorTheme": "One Dark Pro Darker",
    "editor.inlineSuggest.enabled": true,
    "files.autoSave": "afterDelay",
    "editor.detectIndentation": false,
    "files.trimFinalNewlines": true,
    "editor.rulers": [
        80,
        120
    ],
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "editor.fontFamily": "JetBrains Mono",
    "files.insertFinalNewline": true,
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "meta.function",
                "settings": {
                    "fontStyle": "bold",
                },
            },
            {
                "scope": "variable.parameter",
                "settings": {
                    "fontStyle": "italic"
                },
            },
            {
                "scope": "brace",
                "settings": {
                    "foreground": "#878787"
                },
            },
        ]
    },
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.productIconTheme": "material-product-icons",
    "editor.fontSize": 13,
    "editor.lineHeight": 1.3
}
